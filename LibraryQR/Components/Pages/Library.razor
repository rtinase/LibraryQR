@page "/library"
<PageTitle>Library</PageTitle>
<div class="container">
    @{
        var i = 1;
        foreach (var book in Books)
        {
            string src = "Pictures/"+i+".jpg";
            string qrSrc = "QRCodes/"+i+".png";
            <div class="book-container">
                <div class="book-picture"><img src="@src" alt="@src"/></div>
                <p class="title">Title: @book.Title</p>
                <p class="author">Author: @book.Author</p>
                <div class="qr-code"><img src="@qrSrc" alt="@qrSrc" /></div>
            </div>
            i++;
        }   
    }
</div>
